<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">

    <ScrollView
            android:id="@+id/scroll_view_terms_of_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginBottom="40dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

            <TextView
                    android:id="@+id/text_terms_of_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
            android:id="@+id/linear_layout_agree_container"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:elevation="10dp"
            android:background="#BBB">

        <TextView
                android:id="@+id/text_agree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_regular"
                android:textColor="#999"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:text="I am at least 13 years old and agree to the Terms of Service." />

        <CheckBox
                android:id="@+id/checkbox_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:checked="false"
                android:enabled="false" />

    </LinearLayout>

</FrameLayout>