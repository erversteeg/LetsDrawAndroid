                <TextView
                        android:id="@+id/option_canvas_lock_color_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/option_canvas_lock_color_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" />

                <Button
                        android:id="@+id/option_canvas_lock_color_reset"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Reset" />
                
                <View
                        android:id="@+id/option_canvas_lock_color_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/option_grid_line_color_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
