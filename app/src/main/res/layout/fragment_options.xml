<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#FF333333">

    <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

            <com.ericversteeg.liquidocean.view.ActionButtonView
                    android:id="@+id/title_image"
                    android:layout_width="195dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />



            <TextView
                    android:id="@+id/option_paint_panel_texture_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/option_paint_panel_texture_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_image" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/panel_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/option_paint_panel_texture_title" />

            <LinearLayout
                    android:id="@+id/option_canvas_lock_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@drawable/white_border_background"
                    app:layout_constraintTop_toBottomOf="@id/panel_recycler_view">

                <TextView
                        android:id="@+id/option_canvas_lock_border_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/option_canvas_lock_border_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" />

                <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/option_canvas_lock_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/option_canvas_lock_color_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@drawable/white_border_background"
                    app:layout_constraintTop_toBottomOf="@id/option_canvas_lock_container">

                <TextView
                        android:id="@+id/option_canvas_lock_color_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/option_canvas_lock_color_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" />

                <Button
                        android:id="@+id/option_canvas_lock_color_reset"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Reset" />
                
                <View
                        android:id="@+id/option_canvas_lock_color_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/option_emitters_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@drawable/white_border_background"
                    app:layout_constraintTop_toBottomOf="@id/option_canvas_lock_color_container">

                <TextView
                        android:id="@+id/option_option_emitters_container_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/option_emitters_container_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" />

                <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/option_emitters_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/option_prompt_to_exit_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@drawable/white_border_background"
                    app:layout_constraintTop_toBottomOf="@id/option_emitters_container">

                <TextView
                        android:id="@+id/option_prompt_to_exit_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/option_prompt_to_exit_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" />

                <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/option_prompt_to_exit_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

            </LinearLayout>

            <Button
                    android:id="@+id/sign_in_button"
                    android:text="Sign In"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/option_prompt_to_exit_container" />

            <Button
                    android:id="@+id/reset_single_play"
                    android:text="Reset Single Play"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toBottomOf="@id/sign_in_button" />

            <LinearLayout
                    android:id="@+id/change_name_container"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/reset_single_play">

                <TextView
                        android:id="@+id/change_name_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/option_change_name_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" />

                <EditText
                        android:id="@+id/input_name"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_display_name_default"
                        android:padding="10dp" />

                <Button
                        android:id="@+id/change_name_button"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Change" />

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    app:layout_constraintTop_toBottomOf="@id/change_name_container" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.ericversteeg.liquidocean.view.ActionButtonFrame
            android:id="@+id/back_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/back_action"
                android:layout_width="49dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:layout_gravity="start|top" />

    </com.ericversteeg.liquidocean.view.ActionButtonFrame>

</androidx.constraintlayout.widget.ConstraintLayout>