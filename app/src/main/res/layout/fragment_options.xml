                            android:layout_marginLeft="20dp" />

                    <TextView
                            android:id="@+id/option_num_recent_colors_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:textSize="16sp"
