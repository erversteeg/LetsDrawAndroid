                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" />

                <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/option_paint_indicator_fill_circle_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/option_paint_indicator_square_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@drawable/white_border_background"
                    app:layout_constraintTop_toBottomOf="@id/option_paint_indicator_fill_circle_container">

                <TextView
                        android:id="@+id/option_paint_indicator_square_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/option_paint_indicator_square"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" />

                <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/option_paint_indicator_square_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/option_paint_indicator_outline_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@drawable/white_border_background"
                    app:layout_constraintTop_toBottomOf="@id/option_paint_indicator_square_container">

                <TextView
                        android:id="@+id/option_paint_indicator_outline_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/option_paint_indicator_outline_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" />

                <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/option_paint_indicator_outline_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/option_paint_indicator_width_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@drawable/white_border_background"
                    app:layout_constraintTop_toBottomOf="@id/option_paint_indicator_outline_container">

                <TextView
                        android:id="@+id/option_paint_indicator_width_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/option_paint_indicator_width_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" />

                <com.ericversteeg.liquidocean.view.ActionButtonFrame
                        android:id="@+id/option_paint_indicator_width_button_minus"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                    <com.ericversteeg.liquidocean.view.ActionButtonView
                            android:id="@+id/option_paint_indicator_width_action_minus"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center" />
                </com.ericversteeg.liquidocean.view.ActionButtonFrame>

                <TextView
                        android:id="@+id/option_paint_indicator_width_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                <com.ericversteeg.liquidocean.view.ActionButtonFrame
                        android:id="@+id/option_paint_indicator_width_button_plus"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                    <com.ericversteeg.liquidocean.view.ActionButtonView
                            android:id="@+id/option_paint_indicator_width_action_plus"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center" />
                </com.ericversteeg.liquidocean.view.ActionButtonFrame>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/option_close_paint_panel_color_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@drawable/white_border_background"
                    app:layout_constraintTop_toBottomOf="@id/option_paint_indicator_width_container">

                <TextView
                        android:id="@+id/option_close_paint_panel_color_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/option_close_paint_panel_color_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" />

                <Button
                        android:id="@+id/option_close_paint_panel_color_reset_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Reset" />

                <View
                        android:id="@+id/option_close_paint_panel_color_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/option_small_action_buttons_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@drawable/white_border_background"
                    app:layout_constraintTop_toBottomOf="@id/option_close_paint_panel_color_container">

                <TextView
                        android:id="@+id/option_small_action_buttons_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/option_small_action_buttons_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" />

                <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/option_small_action_buttons_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/option_prompt_to_exit_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@drawable/white_border_background"
                    app:layout_constraintTop_toBottomOf="@id/option_small_action_buttons_container">

                <TextView
                        android:id="@+id/option_prompt_to_exit_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/option_prompt_to_exit_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" />

                <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/option_prompt_to_exit_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/option_num_recent_colors"
