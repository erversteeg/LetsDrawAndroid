                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@drawable/white_border_background"
                    app:layout_constraintTop_toBottomOf="@id/option_grid_line_color_container">

                <TextView
                        android:id="@+id/option_show_paint_bar_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/option_show_paint_bar_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" />

                <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/option_show_paint_bar_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/option_show_paint_circle_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@drawable/white_border_background"
                    app:layout_constraintTop_toBottomOf="@id/option_show_paint_bar_container">

                <TextView
                        android:id="@+id/option_show_paint_circle_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/option_show_paint_circle_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" />

                <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/option_show_paint_circle_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

            </LinearLayout>

            <LinearLayout
