<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <com.ericversteeg.liquidocean.view.InteractiveCanvasView
            android:id="@+id/surface_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </com.ericversteeg.liquidocean.view.InteractiveCanvasView>

    <com.ericversteeg.liquidocean.view.ActionButtonFrame
            android:id="@+id/paint_panel_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/paint_panel_action_view"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="top|end" />

    </com.ericversteeg.liquidocean.view.ActionButtonFrame>

    <FrameLayout
            android:id="@+id/paint_warning_frame"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/paint_panel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/paint_warning_frame_background" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/paint_panel"
            android:visibility="invisible"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="3dp"
            android:background="@drawable/wood_texture_light">

        <TextView
                android:id="@+id/drops_amt_text"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#CCFFFFFF"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

        <com.ericversteeg.liquidocean.view.PaintQuantityBar
                android:id="@+id/paint_qty_bar"
                android:layout_width="156dp"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <View
                android:id="@+id/top_left_anchor"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

        <View
                android:id="@+id/top_right_anchor"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        <View
                android:id="@+id/bottom_left_anchor"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

        <View
                android:id="@+id/bottom_right_anchor"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        <com.ericversteeg.liquidocean.view.PaintColorIndicator
                android:id="@+id/paint_indicator_view"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/paint_color_accept_image"
                android:visibility="gone"
                android:layout_width="56dp"
                android:layout_height="40dp"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

            <com.ericversteeg.liquidocean.view.ActionButtonView
                    android:id="@+id/paint_yes"
                    android:visibility="gone"
                    android:layout_width="56dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="30dp"
                    android:foreground="?attr/selectableItemBackground" />

            <com.ericversteeg.liquidocean.view.ActionButtonView
                    android:id="@+id/paint_no"
                    android:visibility="gone"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

            <com.ericversteeg.liquidocean.view.ActionButtonView
                    android:id="@+id/close_paint_panel"
                    android:layout_width="56dp"
                    android:layout_height="40dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
            android:id="@+id/color_picker_frame"
            android:visibility="gone"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#DD111111">

        <top.defaults.colorpicker.ColorPickerView
                android:id="@+id/color_picker_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="3dp"
                app:enableBrightness="true"
                app:enableAlpha="true" />

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recent_colors_container"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/recent1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/recent2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/recent1"/>

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/recent3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/recent2"/>

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/recent4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/recent3"/>

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/recent5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recent1" />

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/recent6"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toRightOf="@id/recent5"
                app:layout_constraintTop_toBottomOf="@id/recent2" />

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/recent7"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toRightOf="@id/recent6"
                app:layout_constraintTop_toBottomOf="@id/recent3" />

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/recent8"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toRightOf="@id/recent7"
                app:layout_constraintTop_toBottomOf="@id/recent4" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.ericversteeg.liquidocean.view.ActionButtonFrame
            android:id="@+id/recent_colors_button"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/recent_colors"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="15dp"
                android:layout_gravity="start|bottom" />

    </com.ericversteeg.liquidocean.view.ActionButtonFrame>

</androidx.constraintlayout.widget.ConstraintLayout>