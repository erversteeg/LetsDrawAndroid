<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <com.ericversteeg.liquidocean.view.InteractiveCanvasView
            android:id="@+id/surface_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </com.ericversteeg.liquidocean.view.InteractiveCanvasView>

    <FrameLayout
            android:id="@+id/paint_panel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_mode_edit_white" />

    </FrameLayout>

    <FrameLayout
            android:id="@+id/paint_warning_frame"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/paint_panel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/paint_warning_frame_background" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/paint_panel"
            android:visibility="invisible"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/wood_texture_dark">

        <TextView
                android:id="@+id/drops_amt_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#CCFFFFFF"
                android:layout_marginTop="25dp"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

        <View
                android:id="@+id/top_left_anchor"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

        <View
                android:id="@+id/top_right_anchor"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        <View
                android:id="@+id/bottom_left_anchor"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

        <View
                android:id="@+id/bottom_right_anchor"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        <com.ericversteeg.liquidocean.view.PaintColorIndicator
                android:id="@+id/paint_indicator_view"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
                android:id="@+id/paint_color_accept_image"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_done_white_alt"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                    android:id="@+id/paint_yes"
                    android:visibility="gone"
                    android:src="@drawable/ic_done_white"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    app:tint="#05AD2E" />

            <ImageView
                    android:id="@+id/paint_no"
                    android:visibility="gone"
                    android:src="@drawable/ic_clear_white"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    app:tint="#FA3A47" />

            <ImageView
                    android:id="@+id/close_paint_panel"
                    android:src="@drawable/ic_trending_flat_white"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    app:tint="#FAD452" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
            android:id="@+id/color_picker_frame"
            android:visibility="gone"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#DDFFFFFF">

        <top.defaults.colorpicker.ColorPickerView
                android:id="@+id/color_picker_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:enableBrightness="true"
                app:enableAlpha="true" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>