<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <com.ericversteeg.liquidocean.view.InteractiveCanvasView
            android:id="@+id/surface_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </com.ericversteeg.liquidocean.view.InteractiveCanvasView>

    <ImageView
            android:id="@+id/paint_panel_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/paint_bucket" />

    <LinearLayout
            android:id="@+id/paint_panel"
            android:visibility="gone"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#CC000000">

        <com.ericversteeg.liquidocean.view.PaintColorIndicator
                android:id="@+id/paint_indicator_view"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/paint_yes"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FF00FF00" />

            <ImageView
                    android:id="@+id/paint_no"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFF0000" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>