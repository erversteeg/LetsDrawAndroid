<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@android:color/transparent">

    <com.ericversteeg.liquidocean.view.ActionButtonFrame
            android:id="@+id/back_button_export"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/back_action_export"
                android:layout_width="49dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:layout_gravity="start|top" />

    </com.ericversteeg.liquidocean.view.ActionButtonFrame>

    <com.ericversteeg.liquidocean.view.ArtView
            android:id="@+id/art_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:id="@+id/screen_size_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/screen_size"
                android:textColor="#99FFFFFF"
                android:textSize="12pt"
                android:textStyle="bold"
                android:layout_marginEnd="10dp" />

        <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/screen_size_switch"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp" />

        <TextView
                android:id="@+id/actual_size_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/actual_size"
                android:textColor="#99FFFFFF"
                android:textSize="12pt"
                android:textStyle="bold"
                android:layout_marginEnd="10dp" />

    </LinearLayout>

    <com.ericversteeg.liquidocean.view.ActionButtonFrame
            android:id="@+id/share_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/share_action"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:elevation="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="top|end" />

    </com.ericversteeg.liquidocean.view.ActionButtonFrame>

    <com.ericversteeg.liquidocean.view.ActionButtonFrame
            android:id="@+id/save_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/share_button">

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/save_action"
                android:layout_width="25dp"
                android:layout_height="32dp"
                android:elevation="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="top|end" />

    </com.ericversteeg.liquidocean.view.ActionButtonFrame>

</androidx.constraintlayout.widget.ConstraintLayout>