<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/gradient_2">

    <com.ericversteeg.liquidocean.view.ActionButtonFrame
            android:id="@+id/back_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/back_action"
                android:layout_width="49dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:layout_gravity="start|top" />

    </com.ericversteeg.liquidocean.view.ActionButtonFrame>

    <com.ericversteeg.liquidocean.view.ArtView
            android:id="@+id/art_showcase"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
            android:id="@+id/menu_button_container"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/play_button"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_margin="10dp" />

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/options_button"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_margin="10dp" />

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/stats_button"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_margin="10dp" />

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/howto_button"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:layout_margin="10dp" />

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/single_button"
                android:visibility="gone"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_margin="10dp" />

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/world_button"
                android:visibility="gone"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:layout_margin="10dp" />

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/dev_button"
                android:visibility="gone"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_margin="10dp" />

        <com.ericversteeg.liquidocean.view.ActionButtonView
                android:id="@+id/empty_button_2"
                android:visibility="gone"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_margin="10dp" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/single_background_options"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.ericversteeg.liquidocean.view.ActionButtonView
                    android:id="@+id/background_option_black"
                    android:layout_width="195dp"
                    android:layout_height="135dp"
                    android:layout_margin="10dp" />

            <com.ericversteeg.liquidocean.view.ActionButtonView
                    android:id="@+id/background_option_white"
                    android:layout_width="195dp"
                    android:layout_height="135dp"
                    android:layout_margin="10dp" />

            <com.ericversteeg.liquidocean.view.ActionButtonView
                    android:id="@+id/background_option_gray_thirds"
                    android:layout_width="195dp"
                    android:layout_height="135dp"
                    android:layout_margin="10dp" />

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.ericversteeg.liquidocean.view.ActionButtonView
                    android:id="@+id/background_option_photoshop"
                    android:layout_width="195dp"
                    android:layout_height="135dp"
                    android:layout_margin="10dp" />

            <com.ericversteeg.liquidocean.view.ActionButtonView
                    android:id="@+id/background_option_classic"
                    android:layout_width="195dp"
                    android:layout_height="135dp"
                    android:layout_margin="10dp" />

            <com.ericversteeg.liquidocean.view.ActionButtonView
                    android:id="@+id/background_option_chess"
                    android:layout_width="195dp"
                    android:layout_height="135dp"
                    android:layout_margin="10dp" />

        </LinearLayout>

    </LinearLayout>

    <View
            android:id="@+id/pixel_view_1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <View
            android:id="@+id/pixel_view_2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <View
            android:id="@+id/pixel_view_3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <View
            android:id="@+id/pixel_view_4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <View
            android:id="@+id/pixel_view_5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <View
            android:id="@+id/pixel_view_6"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <View
            android:id="@+id/pixel_view_7"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>